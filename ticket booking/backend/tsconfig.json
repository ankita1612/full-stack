{
  "compilerOptions": {
    "target": "ES2022", /* Specify ECMAScript target version. */
    "module": "NodeNext", /* Specify module code generation. */
    "lib": ["ES2022", "DOM", "DOM.Iterable"], /* Include built-in library support. */
    "esModuleInterop": true, /* Enables compatibility for default imports from CommonJS modules. */
    "strict": true, /* Enable all strict type-checking options. */
    "skipLibCheck": true, /* Skip type checking of declaration files. */
    //"moduleResolution": "node", /* Helps TypeScript find modules; "bundler" is an alternative for bundlers. */
    "outDir": "./dist", /* Redirect output structure to the directory. */
    "types": ["node", "jest"],
    "isolatedModules": true

  },
  "include": ["src/**/*"] /* Include all files in the src directory. */
}